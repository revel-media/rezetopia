<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:fadeScrollbars="false"
    tools:context="com.rezetopia.ahmed.reze1.app.rezetopia.ahmed.reze1.BuildProfile">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="100dp"
        android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_upload_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        app:civ_border_width="3dp"
        app:civ_border_color="#d2d2d2"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/user_build_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Display Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <Button
        android:id="@+id/settings_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:onClick="gallary"
        android:background="@drawable/roundone_green"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Change picture"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/spinner_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_city"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingRight="7dp"
        android:paddingLeft="18dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/roundtwoltr"
        android:layout_margin="@dimen/dimen_10"
        />
    <Spinner
        android:id="@+id/spinner_carrer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_carrer"
        android:background="@drawable/roundtwoltr"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingRight="7dp"
        android:paddingLeft="18dp"
        android:spinnerMode="dropdown"
        android:layout_margin="@dimen/dimen_10"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundtwoltr"
            android:layout_margin="@dimen/dimen_10"
            android:id="@+id/c_address"
            android:textColor="#fff"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="7dp"
            android:paddingLeft="18dp"
            android:lines="1"
            android:hint="Address"
            android:textColorHint="@color/green2"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundtwoltr"
            android:layout_margin="@dimen/dimen_10"
            android:textColor="#fff"
            android:id="@+id/phone_compelete"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="7dp"
            android:paddingLeft="18dp"
            android:lines="1"
            android:inputType="phone"
            android:visibility="gone"
            android:hint="Phone Number"
            android:textColorHint="@color/green2"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you interested to participate in tournaments and league ?"
        android:layout_margin="@dimen/dimen_10"
        android:padding="@dimen/dimen_10"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="12dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RadioGroup
          android:id="@+id/rgptl"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <RadioButton
              android:id="@+id/radioButton1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Yes "
              android:checked="true"
              android:textSize="12sp" />

          <RadioButton
              android:id="@+id/radioButton2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="No "
              android:textSize="12sp" />
      </RadioGroup>
    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you registered at team ?"
            android:layout_margin="@dimen/dimen_10"
            android:padding="@dimen/dimen_10"
            android:layout_gravity="center|center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/dots_height"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kasb_margin_top">

            <RadioGroup
                android:gravity="center"
                android:id="@+id/rtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes "
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No "
                    android:checked="true"
                    android:textSize="12sp" />
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>