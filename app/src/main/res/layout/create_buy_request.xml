
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="@drawable/post_background"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10">


            <app.reze1.ahmed.reze1.views.CustomEditText
                android:layout_marginTop="@dimen/dimen_10"
                android:inputType="text"
                android:textSize="15sp"
                android:id="@+id/amountView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/imageHolder"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:hint="@string/amount"
                android:background="@android:color/white"
                android:paddingStart="@dimen/dimen_10"/>

            <app.reze1.ahmed.reze1.views.CustomEditText
                android:inputType="text"
                android:textSize="15sp"
                android:id="@+id/mobileNumberView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/amountView"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:hint="@string/mobile"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@android:color/white"
                android:paddingStart="@dimen/dimen_10"/>




            <app.reze1.ahmed.reze1.views.CustomButton
                android:id="@+id/createRequestButton"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_below="@id/mobileNumberView"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@color/green7"
                android:layout_centerHorizontal="true"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
