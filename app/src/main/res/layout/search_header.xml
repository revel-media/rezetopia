<LinearLayout android:id="@+id/searchHeaderLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/green5"/>

    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/userSearchFilter"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/users"
            android:textSize="12sp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/groupSearchFilter"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/groups"
            android:textSize="12sp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/vendorSearchFilter"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/vendors"
            android:textSize="12sp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/teamSearchFilter"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/teams"
            android:textSize="12sp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/eventSearchFilter"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/events"
            android:textSize="12sp"/>

    </LinearLayout>
</LinearLayout>