
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="@drawable/post_background"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10">




            <app.reze1.ahmed.reze1.views.CustomEditText
                android:inputType="text"
                android:textSize="15sp"
                android:id="@+id/teamTitleView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:hint="@string/name"
                android:background="@android:color/white"
                android:paddingStart="@dimen/dimen_10"/>


            <app.reze1.ahmed.reze1.views.CustomButton
                android:id="@+id/createTeamButton"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:layout_height="35dp"
                android:layout_below="@id/teamTitleView"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@color/green7"
                android:layout_centerHorizontal="true"
                android:text="@string/create_team"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAllCaps="false"/>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
