<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:gravity="right"
                android:text="@string/groups"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/sideEventsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:gravity="right"
                android:text="@string/events"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/sideStoreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:gravity="right"
                android:text="@string/stores"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/myTeamView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:gravity="right"
                android:text="@string/my_teams"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <ImageView
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="@dimen/dimen_10"
                android:enabled="false"
                android:text="@string/my_coins"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:enabled="false"
                android:text="@string/setting"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <TextView
                android:gravity="right"
                android:id="@+id/sideSavedPostsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:text="@string/saved_posts"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:gravity="right"
                android:background="@color/colorAccent"
                android:enabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:enabled="false"
                android:text="@string/report_to_rezetopia"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/policy"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="Terms and Conditions"
                android:textColor="@color/green7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/logoutView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_10"
                android:text="@string/log_out"
                android:textColor="@color/green5"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:enabled="false"
                    android:text="@string/english"
                    android:textColor="@color/green7"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:enabled="false"
                    android:text="@string/arabic"
                    android:textColor="@color/green7"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorAccent" />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>